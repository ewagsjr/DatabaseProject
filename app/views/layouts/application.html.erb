<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tag %>
    <!-- JavaScripts -->

    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script>https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.8.0/parsley.js</script>

    <!-- Fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" integrity="sha384-XdYbMnZ/QjLh6iI4ogqCTaIjrFk87ip+ekIjefZch0Y+PvJ8CDYtEs1ipDmPorQ+" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet">

  </head>
  <body>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="collapse navbar-collapse" id="app-navbar-collapse">

        <ul class="nav navbar-nav">
          <li>
            <a href="/">Home</a>
          </li>
        </ul>
        <% if signed_in? -%>
        <div class="col-md-4" style="padding: 0px; width: 300px;">
          <form action="/search/books" method="GET" role="search" class="navbar-form">
            <input style="height: 30px; width: 300px;" type="text" class="form-control search" placeholder="Search Books" name="search" value="">
            <!-- <input type="hidden" name="category" value='workout'> -->
          </form>
        </div>
        <!-- Right Side Of Navbar -->
        <ul class="nav navbar-nav navbar-right">
          <!-- Authentication Links -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <span class="glyphicon glyphicon-plus"></span>
              <span class="fa fa-btn fa-caret-down"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <a href="/books">Create new Book</a>
              </li>
              <li>
                <a href="/categories/new">Create new Book Category</a>
              </li>
            </ul>
          </li>
          <li class="dropdown" style="margin-right: 10px;">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="padding-left: 8px;">
              <span class="glyphicon glyphicon-user"></span>
              <span class="fa fa-btn fa-caret-down"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li style="margin-top: 2px;">
                <a href="#" class="not-active">Signed in as
                  <span style="font-weight: bold;"><%= current_user.email%></span>
                </a>
              </li>
              <hr style="margin-top: 5px; margin-bottom: 5px;"/>
              <li>
                <a href="#">Profile</a>
              </li>
              <hr style="margin-top: 5px; margin-bottom: 5px;"/>
              <li>
                <a href="#">Settings</a>
              </li>
              <li>
                <a ><%= button_to "Sign out", sign_out_path, method: :delete, class: "btn-link" %>
                </a>
              </li>
            </ul>
          </li>
        <% else -%>
          <li>
            <a href="/sign_in">Login</a>
          </li>
          <li>
            <a href="/sign_up">Register</a>
          </li>
          <% end -%>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
