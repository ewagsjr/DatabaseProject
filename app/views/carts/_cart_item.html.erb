<% if !@order_item.nil? && @order_item.errors.any? %>
	<ul>
		<% @order_item.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<% if @order_items.size>0 %>
	<% @order_items.each do |item| %>
		<div class="well">
			<div class="row">
				<div class="col-sm-8">
					<h3><%= item.book.title %></h3>
				</div>

				<div class="col-sm-4">
					<div class="pull-right">
					<%= form_for(item, remote: true) do |f| %>
						<%= f.hidden_field :book_id, value: item.book.id %>
						<div class="form-group">
							<%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
							<%= button_to "Update", item , class: 'btn btn-primary' %>

						</div>
						<div class="btn-group">
							<%= button_to "Destroy", item, method: :delete, remote: true, class: 'btn btn-danger'  %>
						</div>
					<% end %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
	<div class="btn-group">
		<%= button_to( "Order rentals", :action => "order_all", :controller => "order_items", :method => :post)  %>
	</div>

<% end %>
