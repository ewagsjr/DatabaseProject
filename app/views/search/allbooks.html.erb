<div class="row">
  <div class="col-md-8 col-md-offset-2" style="border: 2px dashed rgba(27,31,35,0.3); border-radius: 5px; padding: 30px; width: 648.33px;">
    <h1>All books</h1>

    <hr/>
      <% @books.each do |book| %>
      <a href="/books/<%=book.isbn%>"><%= book.title %></a>
      <p>
        <%= book.pages %>
      </p>
      <p>
        <%= book.publisher %>
      </p>
      <p>
        <%= book.copiesLeft %>
      </p>
      <hr />
      <% end %>
  </div>
  </div>
